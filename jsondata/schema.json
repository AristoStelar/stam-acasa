{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "option": {
            "type": "object",
            "required": ["label"],
            "description": "If the `value` field is missing, the answer value will become the label",
            "properties": {
                "label": {
                    "type": "string"
                },
                "value": {
                    "type": [
                        "string",
                        "boolean"
                    ]
                }
            }
        },
        "inputOption": {
            "type": "object",
            "required": ["placeholder", "optionType"],
            "properties": {
                "placeholder": {
                    "type": "string"
                },
                "optionType": {
                    "enum": [
                        "date",
                        "string",
                        "number"
                    ]
                }
            }
        },
        "question": {
            "type": "object",
            "required": [
                "questionId",
                "questionText",
                "questionType",
                "options"
            ],
            "properties": {
                "questionId": {
                    "type": "integer",
                    "unique": true
                },
                "questionText": {
                    "type": "string"
                },
                "questionType": {
                    "enum": [
                        "SINGLE_CHOICE",
                        "MULTIPLE_CHOICE",
                        "INPUT",
                        "FINAL"
                    ]
                },
                "content": {
                    "type": "string"
                },
                "options": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/option"
                            },
                            {
                                "$ref": "#/definitions/inputOption"
                            }
                        ]
                    }
                },
                "answers": {
                    "type": "array"
                }
            }
        },
        "form": {
            "type": "array",
            "minItems": 0,
            "minContains": 1,
            "title": "The form Schema",
            "description": "A collection of Questions and their relationships",
            "items": {
                "$ref": "#/definitions/question"
            }
        },
        "answer": {
            "type": "array",
            "readOnly": false,
            "writeOnly": false,
            "uniqueItems": false,
            "minItems": 0,
            "minContains": 1,
            "title": "The Answers Schema",
            "description": "An explanation about the purpose of this instance.",
            "default": [],
            "additionalItems": true,
            "items": {
                "$id": "#/items/properties/form/items/properties/answers/items",
                "type": "object",
                "readOnly": false,
                "writeOnly": false,
                "minProperties": 0,
                "title": "The Items Schema",
                "description": "An explanation about the purpose of this instance.",
                "default": {},
                "examples": [
                    {
                        "result": 2.0,
                        "options": [
                            1.0
                        ]
                    },
                    {
                        "options": [
                            2.0
                        ],
                        "result": 3.0
                    }
                ],
                "additionalProperties": true,
                "required": [
                    "options",
                    "result"
                ],
                "properties": {
                    "options": {
                        "$id": "#/items/properties/form/items/properties/answers/items/properties/options",
                        "type": "array",
                        "readOnly": false,
                        "writeOnly": false,
                        "uniqueItems": false,
                        "minItems": 0,
                        "minContains": 1,
                        "title": "The Options Schema",
                        "description": "An explanation about the purpose of this instance.",
                        "default": [],
                        "additionalItems": true,
                        "items": {
                            "$id": "#/items/properties/form/items/properties/answers/items/properties/options/items",
                            "type": "integer",
                            "readOnly": false,
                            "writeOnly": false,
                            "title": "The Items Schema",
                            "description": "An explanation about the purpose of this instance.",
                            "default": 0,
                            "examples": [
                                1
                            ]
                        }
                    },
                    "result": {
                        "$id": "#/items/properties/form/items/properties/answers/items/properties/result",
                        "type": "integer",
                        "readOnly": false,
                        "writeOnly": false,
                        "title": "The Result Schema",
                        "description": "An explanation about the purpose of this instance.",
                        "default": 0,
                        "examples": [
                            2
                        ]
                    }
                }
            }
        }
    },
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "doc_type": {
            "type": "string"
        },
        "doc_id": {
            "type": "integer"
        },
        "active": {
            "type": "boolean"
        },
        "display_order": {
            "type": "integer"
        },
        "content": {
            "type": "string"
        },
        "buttons": {
            "$id": "#/items/properties/buttons",
            "readOnly": false,
            "writeOnly": false,
            "title": "The Buttons Schema",
            "description": "An explanation about the purpose of this instance.",
            "default": null,
            "examples": [
                null
            ]
        },
        "firstNodeId": {
            "type": "integer",
            "title": "The firstNodeId Schema",
            "description": "Id of the first question from the form (starting question id)"
        },
        "form": {
            "$ref": "#definitions/form"
        }
    }
}